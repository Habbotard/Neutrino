package core.storage;

import com.jolbox.bonecp.BoneCP;
import com.jolbox.bonecp.BoneCPConfig;

import core.Environment;

public class DatabaseManager {
    // Hmm, must do some bonecp working
	public BoneCP BoneCPConnection;
	public static DatabaseManager CreateNewDatabaseManager(String Host, int Port, String Username, String Password, String Database) throws Exception
	{
		DatabaseManager D = new DatabaseManager();
		try
        {
            Class.forName("com.mysql.jdbc.Driver"); // load jdbc driver
        } catch (Exception e)
        {
        	Environment.WriteException(e);
        }
		BoneCPConfig config = new BoneCPConfig();
		return D;
	}
}
