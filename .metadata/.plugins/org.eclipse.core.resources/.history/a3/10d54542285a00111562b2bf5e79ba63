        Pet PetData = Pet.Pets.get(PetId);
        
        if(PetData.equals(null))
        	return;
        
        ServerMessage Panel = new ServerMessage(ServerEvents.ShowTrainingPanel);
        Panel.writeInt(PetId);
        if(PetData.Race == 2)
        {
        	
        }
        Panel.Send(Socket);
	}
}
